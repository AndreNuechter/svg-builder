form#active-layer-config
    fieldset.collapsable
        legend Active Layer
        fieldset#ellipse-config.for-ellipse
            label
                span CX
                input(type="number" name="cx" step=1)
            label
                span CY
                input(type="number" name="cy" step=1)
            label
                span RX
                input(type="number" name="rx" min=0 step=1)
            label
                span RY
                input(type="number" name="ry" min=0 step=1)
        fieldset#rect-config.for-rect
            label
                span X
                input(type="number" name="x" step=1)
            label
                span Y
                input(type="number" name="y" step=1)
            label
                span Width
                input(type="number" name="width" min=0 step=1)
            label
                span Height
                input(type="number" name="height" min=0 step=1)