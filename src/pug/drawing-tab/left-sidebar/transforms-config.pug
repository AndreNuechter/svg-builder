fieldset#transforms.collapsable
    legend Transformations
    label
        span Just the layer
        input(type="checkbox" name="transform-layer-only" title="Check this to transform only the active layer")
    form#transformations
        fieldset(name="scale")
            legend Scale
            label
                span x
                input.transform-config(type="number" min=-100 max=100 step=0.1 value=1 data-id=0 data-transform="scale")
            label
                span y
                input.transform-config(type="number" min=-100 max=100 step=0.1 value=1 data-id=1 data-transform="scale")
        fieldset(name="rotate")
            legend Rotate
            label
                span Deg
                input.transform-config(type="range" min=0 max=360 step=0.1 value=0 data-id=0 data-transform="rotate")
            label
                span Cx
                input.transform-config(type="number" step=0.1 value=0 data-id=1 data-transform="rotate")
            label
                span Cy
                input.transform-config(type="number" step=0.1 value=0 data-id=2 data-transform="rotate")
            button#center-rotation-btn Set to middle
        label
            span SkewX
            input(type="range" min=0 max=180 step=0.1 value=0 name="skewX")
        label
            span SkewY
            input(type="range" min=0 max=180 step=0.1 value=0 name="skewY")
    button#reset-transforms Reset