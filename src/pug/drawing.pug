#left-sidebar
    fieldset#layer-management
        legend Layers
        #no-layer-msg No layer, yet...
        #layer-select
        #layer-controls
            button#add-layer Add Layer
            button#del-layer(title="Delete the active layer") Delete Layer
            button#undo Delete Last Point
            button#clear-all Clear Canvas

    div
        fieldset#transforms.togglable
            legend Transformations
            label
                span Just the layer
                input(type="checkbox" name="transform-layer-only" title="Check this to transform only the active layer")
            form#transformations
                fieldset(name="scale")
                    legend Scale
                    label
                        span x
                        input.transform-config(type="number" min=-100 max=100 step=0.1 value=1 data-id=0 data-transform="scale")
                    label
                        span y
                        input.transform-config(type="number" min=-100 max=100 step=0.1 value=1 data-id=1 data-transform="scale")
                fieldset(name="rotate")
                    legend Rotate
                    label
                        span Deg
                        input.transform-config(type="range" min=0 max=360 step=0.1 value=0 data-id=0 data-transform="rotate")
                    label
                        span Cx
                        input.transform-config(type="number" step=0.1 value=0 data-id=1 data-transform="rotate")
                    label
                        span Cy
                        input.transform-config(type="number" step=0.1 value=0 data-id=2 data-transform="rotate")
                    button#center-rotation-btn Set to middle
                label
                    span SkewX
                    input(type="range" min=0 max=180 step=0.1 value=0 name="skewX")
                label
                    span SkewY
                    input(type="range" min=0 max=180 step=0.1 value=0 name="skewY")
            button#reset-transforms Reset

    form#fill-and-stroke
        fieldset.togglable
            legend Fill &amp; Stroke
            label
                span Stroke
                input(type="color" name="stroke")
            label
                span Stroke-opacity
                input(type="range" min=0 max=1 step=0.1 value=1 name="stroke-opacity")
            label
                span Stroke-width
                input(type="range" min=0 max=50 step=0.1 value=2 name="stroke-width")
            label.for-path
                span Stroke-linecap
                select(name="stroke-linecap")
                    option butt
                    option round
                    option square
            label.for-path.for-rect
                span Stroke-linejoin
                select(name="stroke-linejoin")
                    option arcs
                    option bevel
                    option miter
                    option miter-clip
                    option round
            label.for-path.for-rect
                span Stroke-miterlimit
                input(type="number" min=1 step=0.1 value=1 name="stroke-miterlimit")
            label
                span Fill
                input(type="color" name="fill")
            label
                span Fill-opacity
                input(type="range" min=0 max=1 step=0.1 value=1 name="fill-opacity")
            label.for-path
                span Fill-rule
                select(name="fill-rule")
                    option evenodd
                    option nonzero

    form#arc-cmd-config.for-path
        fieldset.togglable
            legend A-command config
            label
                span X-Radius
                input(type="number" name="xR" min=1 step=1 value=50)
            label
                span Y-Radius
                input(type="number" name="yR" min=1 step=1 value=50)
            label
                span Large Arc Flag
                input(type="checkbox" name="large")
            label
                span Sweep Flag
                input(type="checkbox" name="sweep")
            label
                span X-Rotation
                input(type="range" name="xRot" min=0 max=360 step=1 value=0)

#center-content
    #center-top
        form#modes
            fieldset
                legend Modes
                label
                    span Path
                    input(type="radio" name="modes" value="path" checked)
                label
                    span Rectangle
                    input(type="radio" name="modes" value="rect")
                label
                    span Ellipse
                    input(type="radio" name="modes" value="ellipse")

        form#path-specific-config
            fieldset.for-path
                legend Path related
                label Command
                    select#commands
                        option(value="M" selected) Move to (M)
                        option(value="L") Line to (L)
                        option(value="H") Horizontal line to (H)
                        option(value="V") Vertical line to (V)
                        option(value="Q") Quadratic curve to (Q)
                        option(value="S") Smooth curve to (S)
                        option(value="C") Cubic curve to (C)
                        option(value="T") Smooth quadratic curve to (T)
                        option(value="A") Arc to (A)
                label.for-path
                    span Close path
                    input#close-path-toggle(type="checkbox" checked)

    svg#canvas
        g#drawing-content
        g#control-point-container

    #coords