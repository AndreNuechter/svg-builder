
form#output-configuration
    fieldset
        legend Output
        fieldset#dims
            legend Dimensions
            label
                span Width
                input(type="number" min=1 value=320 name="width")
            label
                span Height
                input(type="number" min=1 value=180 name="height")
        fieldset#viewbox-padding
            legend ViewBox Padding
            label
                span Top
                input(type="number" value=0 name="padding-top")
            label
                span Right
                input(type="number" value=0 name="padding-right")
            label
                span Bottom
                input(type="number" value=0 name="padding-bottom")
            label
                span Left
                input(type="number" value=0 name="padding-left")
        fieldset#preserve-aspect-ratio
            legend Preserve Aspect Ratio
            select#ratio(name="ratio")
                option xMidYMid
                option xMinYMin
                option xMaxYMax
                option xMidYMax
                option xMidYMin
                option xMinYMid
                option xMinYMax
                option xMaxYMid
                option xMaxYMin
                option none
            select#slice-or-meet(name="slice-or-meet")
                option meet
                option slice
        button#get-markup(title="...copied to clipboard") Get Markup

